<h1>Add comment</h1>

<%= bootstrap_form_tag(url: "/book_recommendations/#{@book_recommendation.id}/comments", label_errors: true) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>

  <%= f.text_field :student, class: "form-control", placeholder: "First name", label: "First name" %>

  <%= f.text_area :body, class: "form-control", placeholder: "Comment", label: "Comment" %>

  <%= f.submit "Add Comment", class: "btn btn-primary" %>

<% end %>