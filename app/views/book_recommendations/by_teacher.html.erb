<h1>Recommendations by Mrs. Root</h1>

<% if current_user %>
  <%= link_to 'I want to recommend a book', new_book_recommendation_path, class: "pull-left btn btn-primary" %>
<% end %>
<br>
<br>

<div class="col-md-4" style="padding-left: 0;">
  <div class="list-group">
    <% @book_recommendations.each do |rec| %>
      <%= link_to book_recommendation_path(rec) + "?by_teacher=true", class: "list-group-item #{@book_recommendation && rec.id == @book_recommendation.id ? 'active' : ''}" do %>
        <h4 class="list-group-item-heading">
          <%= rec.student.titleize %>
        </h4>

        <p class="list-group-item-text">
          <%= rec.title.titleize %> by  <%= rec.author.titleize %>
        </p>
      <% end %>
    <% end %>
  </div>
</div>